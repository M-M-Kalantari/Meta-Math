<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragments.NumericBase.FragmentNumericBase">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_above="@id/banner_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shape_006"
        android:layout_margin="5dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayout_Binary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorless"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/EditText_Binary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:hint="Binary"
                    android:background="@color/colorless"
                    android:visibility="visible"
                    android:clickable="true"
                    android:focusable="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayout_Octal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorless"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/EditText_Octal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:hint="Octal"
                    android:background="@color/colorless"
                    android:visibility="visible"
                    android:clickable="true"
                    android:focusable="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayout_Decimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorless"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/EditText_Decimal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:hint="Decimal"
                    android:background="@color/colorless"
                    android:visibility="visible"
                    android:layout_weight="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayout_Hex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorless"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/EditText_Hex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:hint="Hex"
                    android:background="@color/colorless"
                    android:visibility="visible"
                    android:clickable="true"
                    android:focusable="true"
                    android:imeOptions="actionSend"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/TextView_Roman_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:hint="Roman Number"
                android:background="@drawable/bg_shape_006"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="5dp"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_shape_006"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:background="@drawable/bg_shape_006">

                    <TextView
                        android:id="@+id/TextView_PrimeNumbers"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="Prime Numbers"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="normal"
                        android:textAllCaps="false"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:visibility="visible"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:clickable="false"
                        android:focusable="false"/>

                    <ImageView
                        android:id="@+id/ImageView_PrimeNumbers"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_nub_non"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextView_Decomposition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint=""
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.adivery.sdk.AdiveryBannerAdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner_ad"
        app:placement_id="9de00226-3884-41c2-b9ca-a1e4b7462df4"
        app:banner_size="smart_banner"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
