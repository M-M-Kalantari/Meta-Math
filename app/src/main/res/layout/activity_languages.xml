<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/black"
    tools:context=".Menu.Language.ActivityLanguages">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shape_001">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar_ActivityLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_002"
            android:elevation="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <TextView
                android:id="@+id/TextView_ActivityLanguages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="1dp"
                android:text="Languages"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Toolbar_ActivityLanguages">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RelativeLayout_Automatically"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_005"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/LinearLayout_Automatically"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:background="@drawable/bg_shape_004">

                        <CheckBox
                            android:id="@+id/CheckBox_Automatically"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checked="true"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="Automatically"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textColor="@color/white" />


                        <ImageView
                            android:id="@+id/ImageView_Automatically"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_002_auto"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout_Persian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_005"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/LinearLayout_Persian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:background="@drawable/bg_shape_004">

                        <CheckBox
                            android:id="@+id/CheckBox_Persian"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checked="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="پارسی"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/ImageView_Persian"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_002_iran"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout_English_US"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_005"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/LinearLayout_English_US"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:background="@drawable/bg_shape_004">

                        <CheckBox
                            android:id="@+id/CheckBox_English_US"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checked="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="English (US)"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/ImageView_English_US"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_002_united_states"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout_English_UK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_005"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/LinearLayout_English_UK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:background="@drawable/bg_shape_004">

                        <CheckBox
                            android:id="@+id/CheckBox_English_UK"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checked="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="English (UK)"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/ImageView_English_UK"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_002_united_kingdom"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout_German"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_005"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/LinearLayout_German"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:background="@drawable/bg_shape_004">

                        <CheckBox
                            android:id="@+id/CheckBox_German"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checked="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="Deutsch"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/ImageView_German"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_002_germany"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout_French"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_005"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/LinearLayout_French"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:background="@drawable/bg_shape_004">

                        <CheckBox
                            android:id="@+id/CheckBox_French"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checked="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="Français"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/ImageView_French"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_002_france"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout_Arabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_005"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:id="@+id/LinearLayout_Arabic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:background="@drawable/bg_shape_004">

                        <CheckBox
                            android:id="@+id/CheckBox_Arabic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:checked="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="العربية"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/ImageView_Arabic"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_002_saudi_arabia"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/ImageView_Back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_004_back" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>