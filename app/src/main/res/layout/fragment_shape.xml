<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout_Shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragments.Shape.FragmentShape">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shape_006"
        android:layout_margin="5dp"
        android:layout_above="@id/banner_ad">

        <RelativeLayout
            android:id="@+id/RelativeLayout_ShapeFields"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/LinearLayout_SelectedField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_shape_002"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:weightSum="5.5">

                <ImageView
                    android:id="@+id/ImageView_SelectedField"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_sha_triangle" />

                <TextView
                    android:id="@+id/TextView_SelectedField"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint=""
                    android:padding="1dp"
                    android:text="Triangle"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="normal"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:clickable="false"
                    android:focusable="false"/>

                <ImageView
                    android:id="@+id/ImageView_Share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_004_share" />

                <ImageView
                    android:id="@+id/ImageView_Clean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_004_trash" />

                <ImageView
                    android:id="@+id/ImageView_Back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_004_back" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/LinearLayout_SelectedField"
                android:layout_margin="5dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/LinearLayout_Shape_Input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_shape_006"
                        android:padding="5dp">

                        <Switch
                            android:id="@+id/Switch_Shape"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:checked="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Shape"
                            android:textSize="25dp"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:background="@drawable/bg_shape_006"
                            android:padding="5dp"
                            tools:ignore="UseSwitchCompatOrMaterialXml"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"/>

                        <EditText
                            android:id="@+id/EditText_Input_A"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_shape_006"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:hint="A"
                            android:inputType="numberDecimal"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="normal"
                            android:visibility="visible"
                            android:padding="5dp" />

                        <EditText
                            android:id="@+id/EditText_Input_B"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_shape_006"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:hint="B"
                            android:inputType="numberDecimal"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="normal"
                            android:visibility="visible"
                            android:padding="5dp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/EditText_Input_C"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_shape_006"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:hint="C"
                            android:inputType="numberDecimal"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="normal"
                            android:visibility="visible"
                            android:padding="5dp"
                            android:layout_marginTop="10dp"/>

                        <EditText
                            android:id="@+id/EditText_Input_D"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/bg_shape_006"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:hint="D"
                            android:inputType="numberDecimal"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="normal"
                            android:visibility="visible"
                            android:padding="5dp"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout_Shape_Output"
                        android:layout_below="@+id/LinearLayout_Shape_Input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bg_shape_006"
                        android:padding="5dp"
                        android:layout_marginTop="25dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayout_Output_X"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorless"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/EditText_Output_X"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="normal"
                                android:textAllCaps="false"
                                android:textAlignment="center"
                                android:inputType="number"
                                android:hint="X"
                                android:background="@color/colorless"
                                android:visibility="visible"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayout_Output_Y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorless"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/EditText_Output_Y"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="normal"
                                android:textAllCaps="false"
                                android:textAlignment="center"
                                android:inputType="number"
                                android:hint="Y"
                                android:background="@color/colorless"
                                android:visibility="visible"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/TextInputLayout_Output_Z"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorless"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/EditText_Output_Z"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="30dp"
                                android:textStyle="normal"
                                android:textAllCaps="false"
                                android:textAlignment="center"
                                android:inputType="number"
                                android:hint="Z"
                                android:background="@color/colorless"
                                android:visibility="visible"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

        <ListView
            android:id="@+id/ListView_Items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_Lock_FragmentShape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_200">

        <ImageView
            android:id="@+id/ImageView_Lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_004_wifi" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ImageView_Lock">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TextView_Lock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint=""
                    android:padding="1dp"
                    android:text="NetWork Error"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="35dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <com.adivery.sdk.AdiveryBannerAdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner_ad"
        app:placement_id="32d5161b-d682-4e01-b310-67352de990d4"
        app:banner_size="smart_banner"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
