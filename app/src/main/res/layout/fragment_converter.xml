<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout_Converter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragments.Converter.FragmentConverter">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shape_006"
        android:layout_margin="5dp"
        android:layout_above="@id/banner_ad">

        <RelativeLayout
            android:id="@+id/RelativeLayout_ConverterFields"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/LinearLayout_SelectedField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_shape_002"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:weightSum="5.5">

                <ImageView
                    android:id="@+id/ImageView_SelectedField"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_con_units" />

                <TextView
                    android:id="@+id/TextView_SelectedField"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:hint=""
                    android:padding="1dp"
                    android:text="Units Prefix"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="normal"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:clickable="false"
                    android:focusable="false"/>

                <ImageView
                    android:id="@+id/ImageView_Share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_004_share" />

                <ImageView
                    android:id="@+id/ImageView_Clean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_004_trash" />

                <ImageView
                    android:id="@+id/ImageView_Back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_004_back" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerView_ConverterFields"
                android:layout_below="@+id/LinearLayout_SelectedField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/ListView_Items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_Lock_FragmentConverter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_200">

        <ImageView
            android:id="@+id/ImageView_Lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_004_wifi" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ImageView_Lock">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TextView_Lock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint=""
                    android:padding="1dp"
                    android:text="NetWork Error"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="35dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <com.adivery.sdk.AdiveryBannerAdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner_ad"
        app:placement_id="b510dc8b-e63d-4f2d-8ec6-884f3427080b"
        app:banner_size="smart_banner"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
